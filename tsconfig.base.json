{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "paths": {
      "@unml-plugins/*": ["./plugins/*/src/index.ts"],
      "@unml/*": ["./packages/*/src/index.ts"]
    }
  }
}
